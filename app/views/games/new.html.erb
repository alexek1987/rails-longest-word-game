<h1>Longest word game</h1>

<div class= "letters-container">
<% @letters.each do |letter|%>
  <p><%= letter %></p>
<% end %>
</div>

<form novalidate="novalidate" class="simple_form search" action="/score" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="&#x2713;" />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters%>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="attempt" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-play"></i> Play
    </button>
  </div>
</form>
